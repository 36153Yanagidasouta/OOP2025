<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TenkiApp" Height="500" Width="900" Background="#1E90FF">
    <Grid>
        <!-- 背景の雲用Canvas -->
        <Canvas Name="CloudCanvas" ClipToBounds="True" Panel.ZIndex="0"
                MouseLeftButtonDown="CloudCanvas_MouseLeftButtonDown"/>

        <!-- 天気情報パネル -->
        <Border CornerRadius="10" Background="#80FFFFFF" Padding="20"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"
                Panel.ZIndex="1" Height="347" Width="606">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">

                <!-- 都道府県入力 -->
                <StackPanel>
                    <TextBlock Text="都道府県" FontSize="18" FontWeight="Bold" Height="36" Width="196"/>
                    <TextBox x:Name="CityInput" Width="188" Height="45" FontSize="16" Margin="0,5,0,0"/>
                    <Button x:Name="SearchButton" Content="検索" Width="158" Height="52" Margin="0,10,0,0"/>
                </StackPanel>

                <!-- 天気表示 -->
                <StackPanel Margin="20,0,0,0">
                    <TextBlock Name="CityText" Text="都道府県" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Name="DateText" Text="YYYY/MM/DD HH:mm" FontSize="16" HorizontalAlignment="Center" Margin="0,5,0,10"/>
                    <Image Name="WeatherIcon" Width=
"64" Height="64" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Name="WeatherDescText" Text="天気" FontSize="18" HorizontalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Name="TemperatureText" Text="-- ℃" FontSize="18" Margin="0,0,15,0"/>
                        <TextBlock Name="HumidityText" Text="湿度: -- %" FontSize="18" Margin="0,0,15,0"/>
                        <TextBlock Name="WindText" Text="風速: -- m/s" FontSize="18"/>
                    </StackPanel>

                    <Button Name="UpdateButton" Content="更新" Width="100" Height="30" Margin="0,15,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
