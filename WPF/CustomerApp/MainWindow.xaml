<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="650" Width="705" Background="#778899">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Center">
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="氏名:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"  FontSize="20"/>
                <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,7" FontSize="20"/>
                <Label Content="電話番号:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"  FontSize="20"/>
                <TextBox x:Name="PhoneTextBox" Grid.Row="1" Grid.Column="1" Margin="0,7"  FontSize="20"/>
                <Label Content="住所:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"  FontSize="20"/>
                <TextBox x:Name="AddressTextBox" Grid.Row="2" Grid.Column="1" Margin="0,7"  FontSize="20"/>
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Border BorderBrush="Black" BorderThickness="1" Width="240" Height="126" RenderTransformOrigin="0.512,0.49">
                    <Image x:Name="ImageWindow" 
                           Stretch="Uniform" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                </Border>



                <StackPanel Orientation="Vertical">
                    <Button Content="新規登録" x:Name="SaveButton" Click="SaveButton_Click" Width="200" Height="40" Margin="5" FontWeight="Bold" Background="LimeGreen"  FontSize="20"/>
                    <Button Content="削除" x:Name="DeleteButton" Click="DeleteButton_Click" Width="200" Height="40" Margin="5" FontWeight="Bold" Background="Pink"  FontSize="20"/>
                    <Button Content="更新" x:Name="UpdateButton" Click="UpdateButton_Click" Width="200" Height="40" Margin="5" FontWeight="Bold" Background="AliceBlue"  FontSize="20"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                <Button Content="画像選択" x:Name="ImageButton" Width="200" Height="40" Margin="10,10,5,5" FontWeight="Bold"  FontSize="20" Click="ImageButton_Click"/>
            </StackPanel>
        </StackPanel>
        <ListView x:Name="CustomerListView" 
                  Grid.Row="1" 
                  Margin="0,10,0,0"  
                  FontSize="15"
                  SelectionChanged="GridListView_SelectionChanged"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="氏名" Width="160" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="電話番号" Width="160" DisplayMemberBinding="{Binding Phone}"/>
                    <GridViewColumn Header="住所" Width="160" DisplayMemberBinding="{Binding Address}"/>
                    <GridViewColumn Header="画像" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image 
                                       Width="80" 
                                       Height="40" 
                                       Margin="5"
                                       Stretch="Uniform"
                                    Source="{Binding Picture}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>