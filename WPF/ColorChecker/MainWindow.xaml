<Window x:Class="ColorChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--1番左 -->
        <Label x:Name="colorArea"  Margin="10" Background= "black" />
        <!--1番左 -->

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height ="*"/>
                <RowDefinition Height ="*"/>
                <RowDefinition Height ="*"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>

            <!--真ん中 -->
            <TextBlock Grid.Column="0" Grid.Row="0" Text="R" FontSize="30"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="rSlider" Grid.Row="0" Grid.Column="1" Maximum="255" VerticalAlignment="Center" Width="120" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="rValue" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" FontSize="15"
                     Text="{Binding ElementName=rSlider, Path=Value, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2" Margin="150,23,10,0" />

            <TextBlock Grid.Column="0" Grid.Row="1" Text="G" FontSize="30"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="gSlider" Grid.Row="1" Grid.Column="1" Maximum="255" VerticalAlignment="Center" Width="120" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="gValue" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" FontSize="15"
                     Text="{Binding ElementName=gSlider, Path=Value, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2" Margin="150,23,10,0"/>

            <TextBlock Grid.Column="0" Grid.Row="2" Text="B" FontSize="30"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="bSlider" Grid.Row="2" Grid.Column="1" Maximum="255" VerticalAlignment="Center" Width="120" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="Slider_ValueChanged"/>
            <TextBox  x:Name="bValue" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" FontSize="15"
                     Text="{Binding ElementName=bSlider, Path=Value, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2" Margin="150,0,10,0"/>


            <!--真ん中 -->

        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height ="16*"/>
                <RowDefinition Height ="55*"/>
            </Grid.RowDefinitions>

            <!--一番右 -->
            <Button Content="STOCK" HorizontalAlignment="Left" Margin="15,10,0,22" FontSize="15" Width="176" Click="stockButton_Click" />

            <ListBox x:Name="ColorList" Grid.Row="1" MouseDoubleClick="ColorList_MouseDoubleClick" Margin="10,39,5,10" />

            <ComboBox x:Name="ColorSelectComboBox" ItemsSource="{Binding}"  SelectedValue="{Binding Color}" SelectionChanged="ColorComboBox_SelectionChanged"  Margin="-243,142,0,0" Height="35" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="181" Grid.Row="1">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Border Width="80" Height="Auto" Margin="5,0" BorderThickness="1" BorderBrush="LightGray" >
                            <Border.Background>
                                <SolidColorBrush Color="{Binding Color}"/>
                            </Border.Background>
                            <TextBlock Text="{Binding Name}"></TextBlock>
                        </Border>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button x:Name="Deletebutton" Content="DELETE" HorizontalAlignment="Left" Height="31" Margin="15,57,0,0" VerticalAlignment="Top" Width="176" Grid.RowSpan="2" Click="Deletebutton_Click" FontSize="15"/>
            <Button x:Name="Allclearbutton" Content="ALLCLEAR" HorizontalAlignment="Left" Margin="200,42,0,0" VerticalAlignment="Top" MouseDoubleClick="Allclearbutton_MouseDoubleClick"/>
            <!--一番右 -->

        </Grid>
        <Button Grid.Column="2" Content="Button" HorizontalAlignment="Left" Margin="297,-77,0,0" VerticalAlignment="Top" Width="0"/>
    </Grid>
</Window>